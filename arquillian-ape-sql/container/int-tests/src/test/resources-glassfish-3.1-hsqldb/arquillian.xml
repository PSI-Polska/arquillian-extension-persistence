<?xml version="1.0"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns="http://jboss.org/schema/arquillian"
            xsi:schemaLocation="http://jboss.org/schema/arquillian
    http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

  <engine>
    <property name="deploymentExportPath">target/deployment</property>
  </engine>

  <container qualifier="chameleon" default="true">
    <configuration>
      <property name="resourcesXml">src/test/resources-glassfish-3.1-hsqldb/glassfish-resources.xml</property>
      <property name="bindHttpPort">9999</property>
    </configuration>
  </container>

  <extension qualifier="persistence">
    <property name="defaultDataSource">arq/hsql</property>
    <property name="dumpData">true</property>
  </extension>

  <extension qualifier="persistence-script">
    <property name="scriptsToExecuteBeforeTest">SET DATABASE REFERENTIAL INTEGRITY FALSE</property>
  </extension>

  <extension qualifier="persistence-dbunit">
    <property name="excludeTablesFromCleanup">SEQUENCE</property>
    <property name="datatypeFactory">org.dbunit.ext.hsqldb.HsqldbDataTypeFactory</property>
    <property name="excludeTablesFromComparisonWhenEmptyExpected">SEQUENCE</property>
  </extension>

</arquillian>
